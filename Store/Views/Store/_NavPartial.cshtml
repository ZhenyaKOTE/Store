
@using Store.Models;
@model Store.Models.InfoForPageProductModel

<div id="HelpNav">
    <div id="Navigation">
        @for (int i = 1; i <= Model.NavigationModel_.MaxPages; ++i)
        {
            if (i == Model.NavigationModel_.SelectedPage)
            {
                <a href="@Url.Content("~/Store/Test/" + Model.ThisCategory + "/" + i)" style="background-color: silver; opacity:0.7; font-size: 20px; height: 30px; width:auto; min-width:30px" class="badge badge-light">@i</a>
            }
            else
            {
                if (Model.NavigationModel_.SelectedPage - 2 == i || Model.NavigationModel_.SelectedPage - 1 == i || Model.NavigationModel_.SelectedPage + 2 == i || Model.NavigationModel_.SelectedPage + 1 == i || i == 1 || i == Model.NavigationModel_.MaxPages) //Selected page != 40
                {
                    <a href="@Url.Content("~/Store/Test/" + Model.ThisCategory + "/" + i)" style="font-size: 20px; height: 30px; width:auto; min-width:30px" class="badge badge-light">@i</a>
                }
                else
                {
                    if ((Model.NavigationModel_.SelectedPage - 3 == i || Model.NavigationModel_.SelectedPage + 3 == i) && i != 1)
                    {
                        <a href="" style="font-size: 20px; height: 30px; width:auto; min-width:30px" class="badge badge-light">...</a>
                    }
                }
            }
        }

    </div>
</div>