@*@model Store.Models.ViewUserModel*@
@using Store.Util

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-dark bg-dark fixed-top">
        <form class="form-inline">
            @if (!User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Войти", "Login", "Account")
                @Html.ActionLink("Регистрация", "Register", "Account")
            }
            else
            {
                <a href="" class="font-weight-normal main">@((User as CustomPrincipal).Name)</a>
                @Html.ActionLink("Выход", "Logout", "Account")

            }
        </form>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@Scripts.Render("~/bundles/PostAction")*@
    @RenderSection("scripts", required: false)
</body>
</html>
